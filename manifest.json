{
  "manifest_version": 2,

  "name": "SIGA - Beautifier",
  "description": "Essa extensão ~tenta~ embelezar algumas páginas do SIGA - CPS",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Beautify SIGA!"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.sigacentropaulasouza.com.br/aluno/horario.aspx"],
      "css": [
        "css/new_siga.css"
      ],
      "js": [
        "js/jquery.js",
        "js/new_siga.js"
      ]
    }
  ]
}
